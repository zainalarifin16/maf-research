  <amx:popup id="pAdvancedOptions" styleClass="dvtm-gallery-options-dialog">
    <amx:panelFormLayout id="pflOptionsForm2" maxColumns="1" rows="4" styleClass="dvtm-gallery-options" fieldWidth="60%"
                         labelWidth="40%">
      <amx:inputText id="sbcInputIncrement" label="inputIncrement" value="#{pageFlowScope.inputIncrement}"/>
      <amx:selectBooleanCheckbox id="sbcLabelDisplay" label="Label" value="#{pageFlowScope.labelDisplay}"/>
      <amx:selectBooleanCheckbox id="sbcReadOnly" label="ReadOnly" value="#{pageFlowScope.readOnly}"/>
      <amx:selectOneChoice id="socPlotArea" label="Plot Area" value="#{pageFlowScope.plotArea}">
        <amx:selectItem id="slPlotAreaAuto" label="auto" value="auto"/>
        <amx:selectItem id="slPlotAreaOff" label="off" value="off"/>
        <amx:selectItem id="slPlotAreaOn" label="on" value="on"/>
      </amx:selectOneChoice>
    </amx:panelFormLayout>
    <amx:commandButton id="cbClose" styleClass="adfmf-commandButton-actionSheet" text="Close">
      <amx:closePopupBehavior popupId="pAdvancedOptions" type="action"/>
    </amx:commandButton>
  </amx:popup>
