    <amx:flexLayout id="fl1" itemFlexibility="shrink-only" itemAlignment="start" itemJustification="start">
      <amx:tableLayout id="tlStatusMeterGaugeVertical" styleClass="dvtm-gallery-container-table" borderWidth="1"
                       halign="center">
        <amx:rowLayout id="rlVerticalLabels">
          <amx:cellFormat id="cfHeaderNoThresholds" inlineStyle="background-color:#e8e8e8" halign="center">
            <amx:outputText id="otNoThresholds" styleClass="field-label" value="no thresholds"/>
          </amx:cellFormat>
          <amx:cellFormat id="cfHeaderOnIndicator" inlineStyle="background-color:#e8e8e8" halign="center">
            <amx:outputText id="otOnIndicator" styleClass="field-label" value='threshold display: "onIndicator"'/>
          </amx:cellFormat>
          <amx:cellFormat id="cfHeaderCurrentOnly" inlineStyle="background-color:#e8e8e8" halign="center">
            <amx:outputText id="otCurrentOnly" styleClass="field-label" value='threshold display: "currentOnly"'/>
          </amx:cellFormat>
          <amx:cellFormat id="cfHeaderAll" inlineStyle="background-color:#e8e8e8" halign="center">
            <amx:outputText id="otAll" styleClass="field-label" value='threshold display: "all"'/>
          </amx:cellFormat>
        </amx:rowLayout>
        <amx:rowLayout id="rlHeaderNoThresholds">
          <amx:cellFormat id="cfHNoThresholdsGauge" styleClass="dvtm-gallery-component-verticalGauge-cell"
                          halign="center">
            <dvtm:statusMeterGauge id="statusMeterGaugeVertical01" inlineStyle="#{pageFlowScope.inlineStyle}"
                                   value="#{pageFlowScope.value}" minValue="#{pageFlowScope.minValue}"
                                   maxValue="#{pageFlowScope.maxValue}" borderColor="#{pageFlowScope.borderColor}"
                                   borderRadius="#{pageFlowScope.borderRadius}"
                                   plotAreaColor="#{pageFlowScope.plotAreaColor}"
                                   plotAreaBorderColor="#{pageFlowScope.plotAreaBorderColor}"
                                   plotAreaBorderRadius="#{pageFlowScope.plotAreaBorderRadius}"
                                   title="#{pageFlowScope.title}" titleStyle="#{pageFlowScope.titleStyle}"
                                   titlePosition="#{pageFlowScope.titlePosition}"
                                   animationOnDisplay="#{pageFlowScope.animationOnDisplay}"
                                   animationOnDataChange="#{pageFlowScope.animationOnDataChange}"
                                   animationDuration="#{pageFlowScope.animationDuration}"
                                   readOnly="#{pageFlowScope.readOnly}" indicatorSize="#{pageFlowScope.indicatorSize}"
                                   innerRadius="#{pageFlowScope.innerRadius}" startAngle="#{pageFlowScope.startAngle}"
                                   angleExtent="#{pageFlowScope.angleExtent}"
                                   inputIncrement="#{pageFlowScope.inputIncrement}" plotArea="#{pageFlowScope.plotArea}"
                                   thresholdDisplay="onIndicator" color="#{pageFlowScope.color}"
                                   shortDesc="#{pageFlowScope.shortDesc}"
                                   orientation="#{pageFlowScope.gaugeOrientation}">
              <dvtm:metricLabel id="ml1" rendered="#{pageFlowScope.labelDisplay}"
                                labelStyle="#{pageFlowScope.metricLabelStyle"
                                position="#{pageFlowScope.metricLabelPosition}"
                                text="#{pageFlowScope.metricLabelText}"/>
              <dvtm:referenceLine color="#{pageFlowScope.referenceLineColor}"
                                  value="#{pageFlowScope.referenceLineValue}"/>
            </dvtm:statusMeterGauge>
          </amx:cellFormat>
          <amx:cellFormat id="cfHOnIndicatorGauge" styleClass="dvtm-gallery-component-verticalGauge-cell"
                          halign="center">
            <dvtm:statusMeterGauge id="statusMeterGaugeVertical02" inlineStyle="#{pageFlowScope.inlineStyle}"
                                   value="#{pageFlowScope.value}" minValue="#{pageFlowScope.minValue}"
                                   maxValue="#{pageFlowScope.maxValue}" borderColor="#{pageFlowScope.borderColor}"
                                   borderRadius="#{pageFlowScope.borderRadius}"
                                   plotAreaColor="#{pageFlowScope.plotAreaColor}"
                                   plotAreaBorderColor="#{pageFlowScope.plotAreaBorderColor}"
                                   plotAreaBorderRadius="#{pageFlowScope.plotAreaBorderRadius}"
                                   title="#{pageFlowScope.title}" titleStyle="#{pageFlowScope.titleStyle}"
                                   titlePosition="#{pageFlowScope.titlePosition}"
                                   animationOnDisplay="#{pageFlowScope.animationOnDisplay}"
                                   animationOnDataChange="#{pageFlowScope.animationOnDataChange}"
                                   animationDuration="#{pageFlowScope.animationDuration}"
                                   readOnly="#{pageFlowScope.readOnly}" indicatorSize="#{pageFlowScope.indicatorSize}"
                                   innerRadius="#{pageFlowScope.innerRadius}" startAngle="#{pageFlowScope.startAngle}"
                                   angleExtent="#{pageFlowScope.angleExtent}"
                                   inputIncrement="#{pageFlowScope.inputIncrement}" plotArea="#{pageFlowScope.plotArea}"
                                   thresholdDisplay="onIndicator" color="#{pageFlowScope.color}"
                                   shortDesc="#{pageFlowScope.shortDesc}"
                                   orientation="#{pageFlowScope.gaugeOrientation}">
              <dvtm:threshold text="#{pageFlowScope.threshold1text}" color="#{pageFlowScope.threshold1color}"
                              maxValue="#{pageFlowScope.threshold1maxValue}"/>
              <dvtm:threshold text="#{pageFlowScope.threshold2text}" color="#{pageFlowScope.threshold2color}"
                              maxValue="#{pageFlowScope.threshold2maxValue}"/>
              <dvtm:threshold text="#{pageFlowScope.threshold3text}" color="#{pageFlowScope.threshold3color}"
                              maxValue="#{pageFlowScope.threshold3maxValue}"/>
